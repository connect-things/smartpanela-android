<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.eti.francisco.smartpanela.SmartPanela">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        android:id="@+id/btnDisc"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtTempo"
        android:layout_alignEnd="@+id/txtTempo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTempAtual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="temp atual"
        android:textSize="30pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#f60c0c" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTempFinal"
        android:layout_below="@+id/txtTempFinalLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Alvo ºC"
        android:id="@+id/txtTempFinalLabel"
        android:layout_below="@+id/txtTempAtual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo (min)"
        android:id="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtTempFinal"
        android:layout_toEndOf="@+id/txtTempFinal"
        android:layout_alignTop="@+id/txtTempFinalLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtTempo"
        android:layout_alignTop="@+id/txtTempFinal"
        android:layout_toRightOf="@+id/txtTempFinal"
        android:layout_toEndOf="@+id/txtTempFinal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:layout_below="@+id/txtTempFinal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtTempo"
        android:layout_alignEnd="@+id/txtTempo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquecendo"
        android:id="@+id/textView4"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btnEnviar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIM"
        android:id="@+id/txtAquecendo"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cronômetro"
        android:id="@+id/textView5"
        android:layout_below="@+id/txtAquecendo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIM"
        android:id="@+id/txtCronometro"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura Final ºC"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/txtTempFinalLabel"
        android:layout_toEndOf="@+id/txtTempFinalLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIM"
        android:id="@+id/txtTempFinalGrav"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cronômetro Atual"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/txtTempFinalGrav"
        android:layout_alignStart="@+id/txtTempFinalGrav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIM"
        android:id="@+id/txtCronAtual"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar recirculação"
        android:id="@+id/btnLigarRecirculacao"
        android:layout_below="@+id/txtCronometro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnDisc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desligar recirculação"
        android:id="@+id/btnDesligarRecirculacao"
        android:layout_alignBottom="@+id/btnLigarRecirculacao"
        android:layout_toRightOf="@+id/btnLigarRecirculacao"
        android:layout_toEndOf="@+id/btnLigarRecirculacao"
        android:layout_below="@+id/txtCronAtual" />
</RelativeLayout>
